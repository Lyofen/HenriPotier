<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadeScrollbars="false">
    <!-- debug menu, only visible in debug compile, no need to save resources (strings, dimens etc..) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This menu is only visible in debug config"
            android:textStyle="bold"/>

        <include layout="@layout/view_debug_separator"/>

        <TextView
            android:id="@+id/textview_app_config"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <include layout="@layout/view_debug_separator"/>

    </LinearLayout>
</ScrollView>